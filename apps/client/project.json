{
  "name": "@monorepo/client",
  "projectType": "application",
  "sourceRoot": "apps/client/src",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run dev",
        "cwd": "apps/client"
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "options": {
        "configFile": "apps/client/vite.config.ts",
        "outputPath": "dist/apps/client"
      },
      "configurations": {
        "production": {
          "mode": "production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/client/src/**/*.ts", "apps/client/src/**/*.tsx"]
      }
    }
  },
  "tags": []
}
